<% content_for :title, "Material Details" %>

<h1><%= @material.store_name %></h1> <!-- Display the store name instead of name -->
<p><strong>Phone:</strong> <%= @material.phone %></p>
<p><strong>Rate:</strong> <%= number_to_currency(@material.rate) %></p>
<p><strong>Paid Value:</strong> <%= number_to_currency(@material.paid_value) %></p>
<p><strong>Quantity:</strong> <%= @material.quantity || 'N/A' %></p>

<%= link_to "Edit", edit_project_material_path(@project, @material), class: "btn btn-warning" %>
<%= button_to "Destroy", project_material_path(@project, @material), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger destroy-btn" %>

<div class="mt-2 d-flex">
  <%= link_to "Back to Materials", project_materials_path(@project), class: "btn btn-secondary me-2" %>
  <%= link_to "Back to Project", project_path(@project), class: "btn btn-secondary" %>
</div>