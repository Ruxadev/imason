<!-- views/materials/_material.html.erb -->
<div class="card shadow-sm mb-5 bg-body rounded" style="width: 18rem;">
  <div class="card-body shadow-lg p-3">
    <h5 class="card-title"><%= material.store_name %></h5>
    <p class="card-text"><strong>Phone:</strong> <%= material.phone %></p>
    <p class="card-text"><strong>Building Material:</strong> <%= material.building_material %></p>
    <p class="card-text"><strong>Rate:</strong> <%= number_to_currency(material.rate) %></p>
    <p class="card-text"><strong>Paid Value:</strong> <%= number_to_currency(material.paid_value) %></p>
    <p class="card-text"><strong>Quantity:</strong> <%= material.quantity || "N/A" %></p>
    <p class="card-text"><strong>Observation:</strong> <%= material.observation || "N/A" %></p>
  </div>
  <div class="card-footer shadow p-3">
  <div class="btn-group" role="group" aria-label="Button group">
    <%= link_to "Show", project_material_path(@project, material), class: "btn btn-outline-secondary btn-sm mx-1" %>
    <%= link_to "Edit", edit_project_material_path(@project, material), class: "btn btn-outline-secondary btn-sm mx-1" %>
    <%= button_to "Delete", project_material_path(@project, material), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-secondary btn-sm mx-1 destroy-btn" %>
  </div>
 </div>
</div>
