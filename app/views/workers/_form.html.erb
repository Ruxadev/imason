      <%= form_with(model: [@project, worker], local: true) do |form| %>
        <% if worker.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(worker.errors.count, "error") %> prohibited this worker from being saved:</h4>
            <ul>
              <% worker.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group mb-3">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control " %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :job_title %>
          <%= form.text_field :job_title, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :phone %>
          <%= form.text_field :phone, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :rate %>
          <%= form.number_field :rate, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :paid_value %>
          <%= form.number_field :paid_value, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :worked_hours %>
          <%= form.number_field :worked_hours, class: "form-control" %>
        </div>

        <div class="text-start">
          <%= form.submit class: "btn btn-primary" %>
          <%= link_to "Back to Workers", project_workers_path(@project), class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
