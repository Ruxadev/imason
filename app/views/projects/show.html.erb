<% content_for :title, "Project Details" %>

<h1 class="mb-4"><%= @project.name %></h1>

<!-- Display notices with Bootstrap alert class -->
<% if notice %>
  <div class="alert alert-info">
    <%= notice %>
  </div>
<% end %>
<%= link_to "Back to Project", projects_path %>
<!-- Display associated materials -->
<h2>Materials</h2>
<%= link_to "Add Material", new_project_material_path(@project), class: "btn btn-primary mb-4" %>
<div id="materials" class="row">
  <% @project.materials.each do |material| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-lg p-3">
        <div class="card-body">
          <%= render material %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%# <div class="card h-100 shadow p-3 mb-5 bg-body rounded"></div> %>
<!-- Display associated workers -->
<h2>Workers</h2>
<%= link_to "Add Worker", new_project_worker_path(@project), class: "btn btn-primary mb-4" %>
<div id="workers" class="row">
  <% @project.workers.each do |worker| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-lg p-3">
        <div class="card-body">
          <%= render worker %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="row">
<div class="col-md-12 text-left mb-4">
  <%= link_to "Back to Project", project_path(@project), class: "btn btn-secondary" %>
</div>