<!DOCTYPE html>
<html>
<head>
  <title><%= content_for(:title) || "Imason" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Additional meta tags -->
  <%= yield :head %>

  <!-- Bootstrap CSS via CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Your Application's CSS -->
  <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>

  <%= javascript_include_tag "#{STRIPE_JS_HOST}/v3/" %>

  <!-- Your Application's JavaScript -->
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

  <!-- Bootstrap JS and Popper via CDN -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
</head>

<body>
  <!-- Bootstrap Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Imason</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Projects', projects_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "nav-link", data: { turbo: false } %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign In', new_user_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign Up', new_user_registration_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Page Content -->
  <div class="container mt-4">
    <%= yield %>
  </div>

</body>
</html>
