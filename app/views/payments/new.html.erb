<h2>Payment Information</h2>

<%= form_with url: payment_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :card_number, "Credit Card Number" %>
    <%= f.text_field :card_number, id: "card_number", maxlength: 16, placeholder: "XXXX XXXX XXXX XXXX", required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :expiry_date, "Expiry Date (MM/YY)" %>
    <%= f.text_field :expiry_date, id: "expiry_date", placeholder: "MM/YY", required: true, class: "form-control", title: "Please enter a valid expiry date (MM/YY)" %>
  </div>

  <div class="form-group">
    <%= f.label :cvc, "CVC" %>
    <%= f.text_field :cvc, id: "cvc", maxlength: 3, placeholder: "XXX", required: true, class: "form-control", title: "Please enter a 3-digit CVC" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit Payment", class: "btn btn-primary" %>
  </div>
<% end %>